[include]
  path = ~/.gitconfig_local

[user]
  name = Goran Topic
  email = amadan@mad.scientist.com

[github]
  user = amadanmath
  email = amadan@mad.scientist.com

[core]
  autocrlf = input
  pager = less -FRSX
  editor = /usr/bin/vim
  excludesfile = ~/.gitignore_global
  whitespace = fix,-indent-with-non-tab,trailing-space,cr-at-eol

[i18n]
  commitEncoding = UTF-8
  logOutputEncoding = UTF-8

[color]
  ui = true

[mergetool "mfugitive"]
  cmd = mvim -f -c \"Gdifff\" \"$MERGED\"

[merge]
  tool = vimdiff
  #mfugitive
  ff = false

[alias]
  st = status -sb
  ci = commit
  cia = commit -a
  co = checkout
  br = branch
  w = whatchanged
  mg = merge --no-ff
  pop = stash pop
  lol = log --graph --decorate --pretty=oneline --abbrev-commit
  lola = log --graph --decorate --pretty=oneline --abbrev-commit --all
  ff = flow feature
  fr = flow release
  fh = flow hotfix
  fs = flow support
  purr = pull --rebase
  ready = rebase -i @{u}
  ignored = ls-files –others -i –exclude-standard
  patch = add --patch
  serve = !git daemon --reuseaddr --verbose --base-path=. --export-all ./.git
  first = log -1 --format="%H" --reverse

[push]
  default = upstream
